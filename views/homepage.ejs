<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <script src="https://use.fontawesome.com/35e0e0136a.js"></script>
    <link rel="stylesheet" href="splide-2.4.21/dist/css/splide.min.css">
    <link rel="stylesheet" href="css/homepage.css">
    
</head>
<body>

    <div class="main">
        <ul class="topbar">
            <div class="left_topbar">
                <li class="topbar_item hamburger_icon"><i class="fa fa-bars"></i></li>
                <li class="topbar_item title">MARKET<span style='color:#E63946;'>PLACE</span></li>
                <li class="topbar_item search" >
                    <input type="text" id="searchBar" class="search_bar" placeholder="Search for a product">
                    <i class="fa fa-search search_icon"></i>
                </li>
            </div>

            <div class="right_topbar">
                <li class="topbar_item account"><i class="fa fa-user"></i><span class="topbar_text">Account</span></li>
                <li class="topbar_item favorites"><i class="fa fa-heart"></i><span class="topbar_text">Favorites</span></li>
                <li class="topbar_item cart"><i class="fa fa-shopping-cart"></i><i class="fa fa-circle"></i><span class="topbar_text">Cart</span></li>
            </div>
        </ul>

        <div class="mobile_menu">
            <li class="category_item_mobile">Phone</li>
            <li class="category_item_mobile">Phone</li>
            <li class="category_item_mobile">Phone</li>
            <li class="category_item_mobile">Phone</li>
            <li class="category_item_mobile">Phone</li>
            <li class="category_item_mobile">Phone</li>
            <li class="category_item_mobile">Phone</li>
            <li class="category_item_mobile">Phone</li>
            <li class="category_item_mobile">Phone</li>
            <li class="category_item_mobile">Phone</li>
        </div>

        <div class="mobile_searchbar">
            <input type="text" id="searchBar" class="search_bar" placeholder="Search for a product">
            <i class="fa fa-search search_icon"></i>
        </div>

        <div class="categories_section">
            <li class="category_item">Phones</li>
            <li class="category_item">Phones</li>
            <li class="category_item">Phones</li>
            <li class="category_item">Phones</li>
            <li class="category_item">Phones</li>
            <li class="category_item">Phones</li>
            <li class="category_item">Phones</li>
            <li class="category_item">Phones</li>
            <li class="category_item">Phones</li>
            <li class="category_item">Phones</li>
            <li class="category_item">Phones</li>
        </div>

        <div class="image_shocase">
            <div class="splide">
                <div class="splide__track">
                    <ul class="splide__list">
                        <li class="splide__slide" >
                            <img src="/images/showcase_image1.jpg">
                        </li>
                        <li class="splide__slide">Slide 02</li>
                        <li class="splide__slide">Slide 03</li>
                    </ul>
                </div>
            </div>
        </div>



    </div>

    <script src="./splide-2.4.21/dist/js/splide.min.js"></script>
    <script src="https://unpkg.com/@popperjs/core@2"></script>
    <script src="https://unpkg.com/tippy.js@6"></script>
    <script>

        // Events
        document.querySelector('.hamburger_icon').addEventListener('click',() => {
            if(document.querySelector('.mobile_menu').style.display == 'block')
                document.querySelector('.mobile_menu').style.display = 'none';
            else
                document.querySelector('.mobile_menu').style.display = 'block';
        })

        //Splide
        new Splide( '.splide' ).mount();


        // Search Bar recent searches 
        tippy('#searchBar', {
            arrow:false,
            trigger: 'click',
            delay: 0,
            interactive:true,
            touch:'true',
            allowHTML: true,
            theme:'customTheme',
            maxWidth:1000,
            content: '<ul class="search_recent">\
                <li><span>Recent Search</span><span>x</span></li>\
                <li><span>Recent Search</span><span>x</span></li>\
                    <ul>'
      });
    </script>
</body>
</html>